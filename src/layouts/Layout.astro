---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Define a global toc array
      window.toc = [];

      // Function to add entries to the TOC
      window.addToTOC = function (text, level) {
        window.toc.push({ text, level });
      };

      // Function to retrieve the TOC
      window.retrieveTOC = function () {
        return window.toc;
      };
    </script>
  </head>
  <body>
    <div class="container">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );

    --nav-width: 20em;
    --nav-margin-l: 1em;

    --CODE-CS-comment: #999;
    --CODE-CS-annotation: #e8ad59;

    --table-header-bg: rgb(var(--accent-light));
    --table-row-alternate-bg: #23262d;
    --table-border-color: #ccc;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    background-size: 224px;
  }

  body {
    font-family:
      system-ui,
      -apple-system,
      Roboto,
      "Segoe UI",
      sans-serif;
    line-height: 1.5;
    color: white;
  }
</style>
